            <h5 class="card-title"><%= team.boards[i].name%></h5>
           
          </div>
        </div>
      </a>
      <% } %>
      </div>
<a href="/createBoard/<%=person._id%>">
        <div class="card" style="width: 18rem;">
          <img src="http://getwallpapers.com/wallpaper/full/b/d/d/571183.jpg" alt="" height="70px">
          <div class="card-img-overlay card-body">
            <h5 class="card-title">Create new board</h5>
          
          </div>
        </div>
      </a>
