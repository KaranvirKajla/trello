        <div class="col-1">
          <img src="https://www.myherodesign.com/wp-content/uploads/2016/06/Indian_Man_Suspicious.gif" height="200px" alt="">
        </div>
<div class="col-3"></div>
        <div class="col-8">
          <h1 class="display-4"><%= team.name%></h1>
       
          <hr class="my-4">
    
          <a class="btn btn-primary btn-lg" href="/teamDetails/<%= person._id%>/<%= team._id%>" role="button">Edit Team Profile</a>
        </div>
      </div>
        

      </div>
    </div>


<div class="container">


      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="#">Boards</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/homeMember/<%=person._id%>/<%= team._id%>">Members</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Settings</a>
        </li>
       
      </ul>



      <div class="row">
    
        <div id="cards">
<% for(i=team.boards.length-1;i>=0;i--){%>
<a href="/tb/<%=person._id%>/<%=team._id%>/<%=team.boards[i]._id%>">
        <div class="card" style="width: 18rem;">
 <img src="https://hips.hearstapps.com/ghk.h-cdn.co/assets/15/33/2048x1024/landscape-1439490128-plants.jpg?resize=980:*" alt="" height="70px">
