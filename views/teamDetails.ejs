<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Team Details</title>
  </head>
  <body>
    <div class="container">

      <form method="POST" action="/teamDetails">

        <input type="text" name="id" id="id" value="<%=pid%>">
        <input type="text" name="tid" value="<%=team._id%>">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" value="<%= team.name%>" type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
          <label for="type">Team Type</label>
          <input type="text" class="form-control" name="type" id="type" value="<%= team.type%>">
        </div>
      
        <div class="form-group">
          <label for="name">Description</label>
          <input value="<%= team.description%>" type="text" class="form-control" name="description" id="description">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <a href="/homeBoard/<%=pid%>/<%= team._id%>" type="button" class="btn btn-secondary">Cancel</a>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>