<div style="overflow: visible; white-space: nowrap;" class="mt-5 mx-3 my-3 no-gutters  flex-nowrap" >

    <div id="lists" style="display: inline-block;">
        
        
      <% for(i=0;i<board.lists.length;i++){ %>

        <div class="card text-white bg-secondary mb-3" style="display: inline-block; max-width: 20rem;  white-space: normal;">
           
            <div class="card-body">
              <h5 class="card-title"><%= board.lists[i].title%></h5>

                <div class="cards">
                  <% for(j=0;j<board.lists[i].cards.length;j++){ %>
                    <a href="#">
                    <div class="card mt-2" style="width: 17rem; color:black">
                        <div class="card-body">
                          <p class="card-text" ><%= board.lists[i].cards[j].title %>.</p>
                         
                        </div>
        
                      </div>
                    </a>
                      <%}%>
                </div>



                <div class="card mt-2" style="width: 17rem; color:black">
                    <div class="card-body">
                      <form action="/cards" method="POST">
                        <input  type="text" name="id" id="id" value="<%= person._id %>">
                        <input  type="text" name="bid" id="bid" value="<%= board._id%>">
                        <input  type="text" name="lid" id="lid" value="<%= board.lists[i]._id%>">
                      <input class="form-control" type="text" name="cardTitle" id="cardTitle" placeholder="Enter a title for this card...">
                      <input type="submit"class="btn btn-primary mt-2" value="Add Card">
                    </form>
                    </div>
    
                  </div>
            </div>
          </div>
       
        <%}%>




    </div>


    <div class="card ml-3" style="width: 18rem; display: inline-block;">
